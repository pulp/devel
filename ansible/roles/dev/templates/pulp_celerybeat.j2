[Unit]
Description=Pulp's Celerybeat
After=network-online.target
Wants=network-online.target

[Service]
EnvironmentFile=-/etc/default/pulp_celerybeat
User=apache
WorkingDirectory=/var/run/pulp_celerybeat/
RuntimeDirectory=pulp_celerybeat
ExecStart={{ pulp_venv | default("/usr") }}/bin/celery beat --app=pulp.tasking.celery_app:celery --scheduler=pulp.tasking.services.scheduler.Scheduler

[Install]
WantedBy=multi-user.target
